# ===========================================
# ZeroBuild AI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# --- Required ---

# Your app's public domain (without protocol)
# Examples: myapp.example.com, localhost:5000
APP_DOMAIN=localhost:5000

# Server port (default: 5000)
PORT=5000

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/zerobuild

# --- Optional ---

# Comma-separated list of allowed CORS origins
# If not set, APP_DOMAIN and localhost are allowed by default
# CORS_ORIGINS=https://myapp.example.com,https://www.myapp.example.com

# Node environment (development or production)
NODE_ENV=development
